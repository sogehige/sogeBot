{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noResolve": false,
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.vue",
    "d.ts/*",
    "tools/*",
    "test/**/*"
  ],
  "exclude": [
    "src/bot",
    "node_modules"
  ]
}